{
  "versionGroups": [
    {
      "label": "Use workspace protocol for local packages",
      "dependencies": ["tcode/*"],
      "dependencyTypes": ["dev", "peer", "prod"],
      "pinVersion": "workspace:*"
    },
    {
      "label": "Standardize TypeScript version",
      "dependencies": ["typescript"],
      "dependencyTypes": ["dev"],
      "pinVersion": "^5.3.3"
    },
    {
      "label": "Standardize ESLint ecosystem",
      "dependencies": ["eslint", "@typescript-eslint/*"],
      "dependencyTypes": ["dev"]
    },
    {
      "label": "Standardize testing ecosystem",
      "dependencies": ["vitest", "@vitest/*", "@playwright/test"],
      "dependencyTypes": ["dev"]
    },
    {
      "label": "Standardize Microsoft Dev Tunnels",
      "dependencies": ["@microsoft/dev-tunnels-*"],
      "dependencyTypes": ["prod", "dev"]
    }
  ],
  "semverGroups": [
    {
      "label": "Pin exact versions for build tools",
      "dependencies": ["typescript", "prettier", "eslint"],
      "dependencyTypes": ["dev"],
      "range": ""
    }
  ]
}