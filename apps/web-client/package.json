{
  "name": "@minimal-terminal-client/web-client",
  "version": "1.0.0",
  "description": "Progressive Web App client for minimal terminal client",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0"
  },
  "devDependencies": {
    "@types/dom-screen-wake-lock": "^1.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "rimraf": "^5.0.10",
    "vite": "^7.0.1",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  }
