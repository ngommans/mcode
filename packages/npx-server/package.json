{
  "name": "tcode",
  "version": "1.0.0",
  "description": "Terminal Code (tcode) - Web terminal client for GitHub Codespaces",
  "type": "module",
  "bin": {
    "tcode": "./dist/server.js"
  },
  "main": "./dist/server.js",
  "files": [
    "dist/",
    "static/"
  ],
  "scripts": {
    "build": "tsc",
    "copy:static": "cp -r ../../apps/web-client/dist/* ./static/ 2>/dev/null || mkdir -p ./static && cp -r ../../apps/web-client/dist/* ./static/",
    "prebuild": "npm run copy:static",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "terminal",
    "codespace",
    "client",
    "web",
    "npx"
  ],
  "author": "Nick Gommans",
  "license": "MIT"
}